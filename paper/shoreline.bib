}

@article{kopparapuInnerEdgeHabitable2016,
  title = {The {{Inner Edge}} of the {{Habitable Zone}} for {{Synchronously Rotating Planets}} around {{Low-mass Stars Using General Circulation Models}}},
  author = {kumar Kopparapu, Ravi and Wolf, Eric T. and {Haqq-Misra}, Jacob and Yang, Jun and Kasting, James F. and Meadows, Victoria and Terrien, Ryan and Mahadevan, Suvrath},
