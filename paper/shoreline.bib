  file = {/Users/zabe0091/Zotero/storage/R36QJU7Q/Wordsworth and Kreidberg - 2022 - Atmospheres of Rocky Exoplanets.pdf}
}

@article{wordsworthWaterLossTerrestrial2013,
  title = {Water {{Loss}} from {{Terrestrial Planets}} with {{CO}}{\textsubscript{2}}-Rich {{Atmospheres}}},
  author = {Wordsworth, R. D. and Pierrehumbert, R. T.},
  year = {2013},
  month = dec,
  journal = {The Astrophysical Journal},
  volume = {778},
