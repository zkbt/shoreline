  keywords = {Astrophysics},
  annotation = {ADS Bibcode: 2008PASP..120..317N},
  file = {/Users/zabe0091/Zotero/storage/4VQ5QUYI/Nutzman and Charbonneau - 2008 - Design Considerations for a Ground-Based Transit Search for Habitable Planets Orbiting M Dwarfs.pdf}
