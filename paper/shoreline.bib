@article{zahnleCosmicShorelineEvidence2017a,
  title = {The {{Cosmic Shoreline}}: {{The Evidence}} That {{Escape Determines}} Which {{Planets Have Atmospheres}}, and What This {{May Mean}} for {{Proxima Centauri B}}},
  shorttitle = {The {{Cosmic Shoreline}}},
  author = {Zahnle, Kevin J. and Catling, David C.},
  year = {2017},
  month = jul,
  journal = {The Astrophysical Journal},
  volume = {843},
  number = {2},
  pages = {122},
  issn = {0004-637X},
  doi = {10.3847/1538-4357/aa7846},
  urldate = {2025-05-30},
  abstract = {The planets of the solar system are neatly divided between those with atmospheres and those without when arranged by insolation (I) and escape velocity (\{v\}\textsubscript{\{esc\vphantom\}}\vphantom\{\}). The dividing line goes at I{\textbackslash}propto \{v\}\textsubscript{\{esc\vphantom\}}\vphantom\{\}\textsuperscript{4}. Exoplanets with reported masses and radii are shown to crowd against the extrapolation of the solar system trend, making a metaphorical cosmic shoreline that unites all the planets. The I{\textbackslash}propto \{v\}\textsubscript{\{esc\vphantom\}}\vphantom\{\}\textsuperscript{4} relation may implicate thermal escape. We therefore address the general behavior of hydrodynamic thermal escape models ranging from Pluto to highly irradiated extrasolar giant planets (EGPs). Energy-limited escape is harder to test because copious XUV radiation is mostly a feature of young stars, and hence requires extrapolating to historic XUV fluences (\{I\}\textsubscript{\{xuv\vphantom\}}\vphantom\{\}) using proxies and power laws. An energy-limited shoreline should scale as \{I\}\textsubscript{\{xuv\vphantom\}}\vphantom\{\}{\textbackslash}propto \{v\}\textsubscript{\{esc\vphantom\}}\vphantom\{\}\textsuperscript{3}{\textbackslash}sqrt\{{$\rho$} \}, which differs distinctly from the apparent \{I\}\textsubscript{\{xuv\vphantom\}}\vphantom\{\}{\textbackslash}propto \{v\}\textsubscript{\{esc\vphantom\}}\vphantom\{\}\textsuperscript{4} relation. Energy-limited escape does provide good quantitative agreement to the highly irradiated EGPs. Diffusion-limited escape implies that no planet can lose more than 1\% of its mass as H\textsubscript{2}. Impact erosion, to the extent that impact velocities \{v\}\textsubscript{\{imp\vphantom\}}\vphantom\{\} can be estimated for exoplanets, fits a \{v\}\textsubscript{\{imp\vphantom\}}\vphantom\{\}{$\approx$} 4\{--\}5 \{v\}\textsubscript{\{esc\vphantom\}}\vphantom\{\} shoreline. The proportionality constant is consistent wit