@article{abeHabitableZoneLimits2011,
  title = {Habitable {{Zone Limits}} for {{Dry Planets}}},
  author = {Abe, Yutaka and {Abe-Ouchi}, Ayako and Sleep, Norman H. and Zahnle, Kevin J.},
